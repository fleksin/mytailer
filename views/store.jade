extends layout_Customer

block content  
  link(rel='stylesheet' href='/stylesheets/seller/style.css')  
  if items
   for el in items
    -var href = '/items/'+wechat+'/'+el.uploadTime
    div(class='product' style='margin:0px auto 5px;padding:2px' data=el onclick="window.location.href='"+href+"'")
      img(src= el.preview style='max-width:100%;margin:5px auto 2px;')
      h3(class="panel-title" style='font-weight: 600;margin:0 3px 2px;font-size:100%')= el.title
       span(style='float:right;color: rgba(77,0,255,0.54)')= '$ ' + el.price 
      
  script(src='/javascripts/store.js')
  script(src='/javascripts/seller/fixLayout.js')
  
 
   

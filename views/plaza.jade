extends layout

block content  
  if data
    for el in data
     div(class='panel panel-default smooth-corner' style='margin:0px auto 30px;')
       div(class="panel-heading" style="background: rgba(255,255,255,.9)")
         h3(class="panel-title")= el.storeName
            span(style='float:right;color: rgba(77,0,255,0.54)')= el.id
       div(class='panel-body')
         if(el.items)
          img(src= el.items[0].img style='max-width:100%;margin: 0 0 10px;')
          p= el.items[0].description  
         else 
          p 裁缝还没有放出任何东西     
         div(id='moreItem' style='display:none;max-height:30%')
          if(el.items)
            -var i = 0
            for item in el.items
              if(i++<3)
               img(src=item.img style='height:60px;margin:0 5px')
            a 进入店铺
        div(class="btn-group btn-group-justified" role="group")
            div(class="btn-group" role="group")
              button(type="button" class="btn btn-default" id='seeMore') 更多衣服
  else
    p Oops cannot find anything, Try again!
  script(src='/javascripts/plaza.js')

 
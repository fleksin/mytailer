extends layout_Customer

block content 
  link(rel='stylesheet' href='/stylesheets/seller/style.css') 
  if data
   for el in data
    if el.store&&el.store.items
     -var link = "window.location.href='/store/" + el.wechat + "'"
     div(class='store' onclick=link)
       div(style='padding:2%;display:flex')
         img(src= el.store.items[0].preview style='max-width:70%;height:auto;margin:0;')
         //p(class='well')= el.store.description  
         div(id='moreItem' style='display:flex;max-width:30%;flex-direction:column;margin-left:2%')
          if(el.store.items)
            -var i = 0
            for item in el.store.items
              if(i++<3)
               img(src=item.preview style='width:100%;margin:0 0px 2px')
        div(class="float-bottom")= el.store.name
  else
    p Oops cannot find anything, Try again!
  script(src='/javascripts/seller/fixLayout.js')
  
 

extends layout

block content
  
  form(class='panel' method ='post' action='/upload' enctype="multipart/form-data" style='position:relative')
      h3(class="panel-title") upload here
      canvas(id='resize' style='max-width:100%;margin: 0 0 10px')
      //img(id='uploadImg' style='max-width:100%;margin: 0 0 10px' )
      input(id="myFileInput" type="file" accept="image/*;capture=camera" name='itemImage' required)
      span(style='float:right')
      label 名称
      input(id='title' name='title' class="form-control" placeholder="set a name for you item" required)
      label 描述
      input(id='description' name='description' class="form-control" placeholder="make your item appealing" required)
      label(class='price') 价格
      input(id='price' name='price' class="form-control" placeholder="make your item appealing" required)
      span(class='glyphicon glyphicon-plus' id='addParam' style='float:right')
      label 具体参数
      div(class='parameters')
      button(class="btn btn-lg btn-primary btn-block" type="submit") submit
      //div(class='panel smooth-corner' style='width:100%;height:100%;top:0;left:0; position:absolute')
      p(style='text-align:center;display:none' id='uploading')正在上传，请不要刷新页面
  script(src='/javascripts/upload.js')
   
   

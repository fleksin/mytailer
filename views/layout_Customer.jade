    style.
       .panel{
          max-width:600px;
          background-color: rgba(255,255,255,0.7);
       }
       .alert{
          max-width: 70%;
          margin: 0px auto 10px auto;
        }
        body{
         background-size: contain;
        }
        table{
            table-layout: fixed;
        }
        td{
            word-break: break-all;
        }
       .choiceTdLeft{
            border-bottom: 5px solid white;
            border-right: 5px solid white;
            text-align: center;
            font-size: 20px;
        }
       .choiceTdLeftImg{
            border-right: 5px solid white;

extend layout

block content 
  if orders
   div(id='myCarousel' class="carousel slide" data-interval = 'false')
    div(class="carousel-inner" role="listbox")
     div(class='item active')
      div(class="list-group")      
       for order in orders
        div(class='list-group-item order' style='width:80%;margin:10px auto' href="#myCarousel" data-slide='next' data=order)
          span(class="glyphicon glyphicon-chevron-right" style='float:right')   
          h4(class="list-group-item-heading") 来自 #{order.buyer} 的订单
          p(class="list-group-item-text") 于 #{order.createDate} 下单          
     div(class='item')  
      div(id='detail' class='panel smooth-corner' style='margin:0 auto; width:80%')
       div(class='panel-body')
        h4 订单来自：
          h4(id='detail-buyer')
        p 下单日期：
          p(id='detail-createDate')
        span(href="#myCarousel" data-slide='prev' class="glyphicon glyphicon-chevron-left")         
  script.
   $(document).ready(function(){
       $('.order').click(function(){
           var data = $.parseJSON($(this).attr('data'));
           $('#detail-buyer').html(data.buyer);
           $('#detail-createDate').html(data.createDate);
       });
   });   